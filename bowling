   #include <stdio.h>
   int main(void)
   {
       int i=1, score1, score2, score3,  total=0, bonus=0;
       while(i<10)
       {
           printf("%d번째 프레임 1 번째 처리 핀 수: ", i);
           scanf("%d", &score1);
          if(bonus==1)
          {
              total+=score1;
              --bonus;
          }
          if(bonus==2)
          {
              total+=score1;
              --bonus;
          }
          if(bonus==3)
          {
              total+=score1*2;
              bonus=1;
          }
          total+=score1;
          printf("****현재까지 점수: %d\n", total);
 
          if(score1 != 10)
          {
              printf("%d번째 프레임 2 번째 처리 핀 수: ", i);
              scanf("%d", &score2);
              if(bonus==1)
              {
                  total+=score2;
                  --bonus;
              }
              total+=score2;
              printf("****현재까지 점수: %d\n", total);
              if((score1+score2)==10)
              {
                  bonus+=1;
              }
          }
          else
          {
              bonus+=2;
          }
          ++i;
      }
      while(i==10)
      {
          printf("%d번째 프레임 1 번째 핀 수: ", i);
          scanf("%d", &score1);
          if(bonus==1)
          {
              total+=score1;
              --bonus;
          }
          if(bonus==2)
          {
              total+=score1;
              --bonus;
          }
          if(bonus==3)
          {
              total+=score1*2;
 
              bonus=1;
          }
          total+=score1;
          printf("****현재까지 점수: %d\n", total);
          printf("%d번째 프레임 2 번째 핀 수: ", i);
          scanf("%d", &score2);
          if(bonus==1)
          {
              total+=score2;
              --bonus;
          }
          total+=score2;
          if((score1+score2)<10)
          {
              printf("****최종 점수: %d\n", total);
          }
          else if((score1+score2)>=10)
          {
              printf("****현재까지 점수: %d\n", total);
              printf("%d번째 프레임 3 번째 핀 수: ", i);
              scanf("%d", &score3);
              total+=score3;
              printf("****최종 점수: %d\n", total);
          }
          ++i;
      }
      return 0;
  }
